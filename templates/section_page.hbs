<div class="container-divider"></div>
<div class="container">
  <nav class="sub-nav custom-page-search-mini">
    {{breadcrumbs}}
    {{search scoped=true submit=false placeholder='Search for help articles, videos and more'}}
  </nav>

  <header class="page-header">
    <h1>
      {{section.name}}
    </h1>
    {{#if settings.show_follow_section}}
    {{subscribe}}
    {{/if}}
    {{#if section.description}}
    <p class="page-header-description">{{section.description}}</p>
    {{/if}}
  </header>

  {{#if section.sections}}
  <section class="custom-card-container">
    {{#each section.sections}}
    <div class="custom-card small-card">
      <a href="{{url}}" class="custom-card-link">
        <div class="custom-card-logo-container">
          {{#is id 360009733874}}
          <img class="material-icons black-icon" src="{{asset 'rule-24px.svg'}}" />
          {{else}}
          {{#is id 360010838733}}
          <i class="material-icons black-icon">storage</i>
          {{else}}
          {{#is id 360009734414}}
          <img class="material-icons black-icon" src="{{asset 'text_snippet-24px.svg'}}" />
          {{else}}
          {{#is id 360009734354}}
          <i class="material-icons black-icon">low_priority</i>
          {{else}}
          {{#is id 360009734434}}
          <i class="material-icons black-icon">settings_system_daydream</i>
          {{else}}
          {{#is id 360010838813}}
          <i class="material-icons black-icon">developer_mode</i>
          {{else}}
          {{#is id 360010838853}}
          <img class="material-icons black-icon" src="{{asset 'api-24px.svg'}}" />
          {{else}}
          {{#is id 360010838833}}
          <img class="material-icons black-icon" src="{{asset 'grading-24px.svg'}}" />
          {{else}}
          {{#is id 360010839453}}
          <i class="material-icons black-icon">more_horiz</i>
          {{else}}
          <i class="material-icons black-icon">camera</i>
          {{/is}}
          {{/is}}
          {{/is}}
          {{/is}}
          {{/is}}
          {{/is}}
          {{/is}}
          {{/is}}
          {{/is}}
        </div>
        <h3 class="custom-card-title">
          {{name}}
        </h3>
      </a>
    </div>
    {{/each}}
  </section>
  {{/if}}

  {{#if section.articles}}
  <ul class="article-list">
    {{#each section.articles}}
    <li class="article-list-item {{#if promoted}} article-promoted{{/if}}">
      {{#if promoted}}
      <span data-title="{{t 'promoted'}}" class="icon-star"></span>
      {{/if}}
      <a href="{{url}}" class="article-list-link">{{title}}</a>
      {{#if internal}}
      <span class="icon-lock" title="{{t 'internal'}}"></span>
      {{/if}}
    </li>
    {{/each}}
  </ul>
  {{/if}}

</div>