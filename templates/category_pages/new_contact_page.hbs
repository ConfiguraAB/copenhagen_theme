<div class="container-divider"></div>
<div class="container">
    <nav class="sub-nav custom-page-search-mini">
    {{breadcrumbs}}
    {{search scoped=true submit=false placeholder='Search for help articles, videos and more'}}
    </nav>
    <header class="page-header">
        <span>
            <h1>{{category.name}}</h1>
            <p class="custom-contact-header-additional-desc">
                <b>{{category.description}}</b>
            </p>
        </span>
    </header>
     <!-- CUSTOM CARDS -->
    <div class="custom-card-container">
        {{#each sections}}
        <div class="custom-contact-card-wrapper">
        <section class="custom-card small-card">
        {{#is id 1500002292901}}
            <a href="https://support.configura.com/hc/en-us/sections/1500002292901" class="custom-card-link">
                <div class="custom-card-logo-container">
                <i class="material-icons black-icon">person</i>
                </div>
                <h3 class="custom-card-title">
                    {{name}}
                </h3>
            </a>
        </section>
        {{/is}}
        {{#is id 1500002272662}}
            <a href="https://support.configura.com/hc/en-us/sections/1500002272662" class="custom-card-link">
                <div class="custom-card-logo-container">
                <i class="material-icons black-icon">code</i>
                </div>
                <h3 class="custom-card-title">
                    {{name}}
                </h3>
            </a>
        {{/is}}
        {{#is id 1500002292921}}
            <a href="https://support.configura.com/hc/en-us/sections/1500002292921" class="custom-card-link">
                <div class="custom-card-logo-container">
                <i class="material-icons black-icon">playlist_add_check</i>
                </div>
                <h3 class="custom-card-title">
                    {{name}}
                </h3>
            </a>
        {{/is}}
        </div>
        {{/each}}
    </div>
</div>
