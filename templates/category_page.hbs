<!-- CUSTOM SIDEBAR -->
<main class="main-sidebar" role="main">
<div id="sidebar" class="sidebar-panel">
  <ul class="sidebar">
    <li class="sidebar-item sidebar-home open">
      <a href="https://www.configura.com/academy/cet-designer" class="custom-sidebar-item-title" target="_blank">
        <i class="material-icons custom-sidebar-icon custom-icon-margin-right black-icon">school</i>
         Academy and training
      </a>
    </li>
    <li class="sidebar-item sidebar-home open">
      <a href="https://www.configura.com/products/system-recommendations/cet-designer" class="custom-sidebar-item-title" target="_blank">
        <i class="material-icons custom-sidebar-icon custom-icon-margin-right black-icon">laptop</i>
         System recommendations
      </a>
    </li>
    <li class="sidebar-item sidebar-home open">
      <a href="https://www.configura.com/products/release-notes/cet-designer" class="custom-sidebar-item-title" target="_blank">
        <i class="material-icons custom-sidebar-icon custom-icon-margin-right black-icon">book</i>
         Release notes
      </a>
    </li>
    <li class="sidebar-item sidebar-home open custom-margin-bottom">
      <a href=" https://www.configura.com/my/forum" class="custom-sidebar-item-title" target="_blank">
        <i class="material-icons custom-sidebar-icon custom-icon-margin-right black-icon">forum</i>
         Forums
      </a>
    </li>
    <li :class="['sidebar-item', isOpen(category.id)]" v-for='category in categories' :data-id='category.id'>
      <h4 class="sidebar-item-title" @click='setActiveSection(category.id)' v-cloak>{[{category.name}]}</h4>   
      <ul v-if='category.id === activeSection'>
        <li :class="['sidebar-item', isCurrent(section.id)]" v-for='section in category.sections'>
          <a :href='section.html_url' class="sidebar-item-link">
            {[{section.name}]} 
          </a>
        </li>
      </ul>
    </li>
  </ul>
</div>
  
<!-- END CUSTOM SIDEBAR -->

<div class="container-divider"></div>
<div class="custom-container container custom-page-search">
  <nav class="sub-nav">
    {{breadcrumbs}}
    {{search submit=false}}
  </nav>
  <div class="category-container custom-category-container">
    <div class="category-content">
      <header class="page-header">
        <h1>{{category.name}}</h1>
        {{#if category.description}}
          <p class="page-header-description">{{category.description}}</p>
        {{/if}}
      </header>
      <!-- CUSTOM CARDS -->
      <div class="custom-card-container">
        {{#each sections}}
        	<section class="custom-card">
            	<a href="{{url}}" class="custom-card-link">
              	<div class="custom-card-logo-container">
                  <i class="material-icons black-icon">camera</i>
                </div>
          			<h3 class="custom-card-title">      
                	{{name}}
              	</h3>
              </a>
      <!-- END CUSTOM CARDS -->
            	{{#if internal}}
            		<span class="icon-lock" title="{{t 'internal'}}"></span>
            	{{/if}}
        	</section>
					{{else}}
						<i class="category-empty">
							<a href="{{category.url}}">{{t 'empty'}}</a>
						</i>
					{{/each}}
      </div>
      <section class="custom-activity section activity">
    		{{#if settings.show_recent_activity}}
    			{{recent_activity scope='category'}}
  			{{/if}}
      </section>
    </div>
  </div>
</div>
<script>sidebar.$mount("main");</script>
</main>